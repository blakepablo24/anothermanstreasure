{% extends 'admin/base.html.twig' %}

{% block header %}
{% endblock %}

{% block main %}

    <main style="grid-row: 1 / 4;">

        {{ form_start(form, {'attr':{'novalidate':'novalidate',  'class': 'post-free-item-container'}}) }}

            <div class="all-categories-nav">

                <a href="{{path('admin_main_page')}}"><i class="fas fa-arrow-circle-left"></i> Back to profile</a>

            </div>

            <h2>My Contact Details</h2>

            <label><h3>Email</h3></label>
            {{ form_widget(form.email, {'attr': {'class': 'post-free-item-field'}}) }}
            {{form_errors(form.email)}}

            <label><h3>Name</h3></label>
            {{ form_widget(form.name, {'attr': {'class': 'post-free-item-field'}}) }}
            {{form_errors(form.name)}}

            <label><h3>Last Name</h3></label>
            {{ form_widget(form.last_name, {'attr': {'class': 'post-free-item-field'}}) }}
            {{form_errors(form.last_name)}}

            <label><h3>Contact Number</h3></label>
            {{ form_widget(form.number, {'attr': {'class': 'post-free-item-field'}}) }}
            {{form_errors(form.number)}}

            <div class="address-lookup">
                <a id="address-lookup-template" class="post-free-item-button-address-lookup-change" onclick="changeAddress()">Change address</a>
                <input id="address-lookup-change-postcode" class="post-free-item-field-address-lookup" type="text" placeholder="postcode">
                <button id="address-lookup-change-postcode-button" class="post-free-item-button-address-lookup">Find Address</button>
            </div>

            <label><h3>Address</h3></label>
            {{ form_widget(form.address_line_1, {'attr': {'class': 'post-free-item-field'}}) }}
            {{form_errors(form.address_line_1)}}

            {{ form_widget(form.address_line_2, {'attr': {'class': 'post-free-item-field'}}) }}
            {{form_errors(form.address_line_2)}}

            {{ form_widget(form.address_line_3, {'attr': {'class': 'post-free-item-field'}}) }}
            {{form_errors(form.address_line_3)}}

            {{ form_widget(form.address_area, {'attr': {'class': 'post-free-item-field'}}) }}
            {{form_errors(form.address_area)}}

            {{ form_widget(form.address_post_code, {'attr': {'class': 'post-free-item-field'}}) }}
            {{form_errors(form.address_post_code)}}

            {{ form_widget(form.submitChanges, {'attr': {'class': 'post-free-item-button'}}) }}

        {{ form_end(form) }}
    
    </main>

{% endblock %}

{% block footer %}
{% endblock %}

{% block javascripts %}

<script>
    
    function changeAddress() {

        document.getElementById("address-lookup-template").style.display = "none";
        document.getElementById("address-lookup-change-postcode").style.display = "block";
        document.getElementById("address-lookup-change-postcode-button").style.display = "block";

    }

</script>

{% endblock %}