{% extends 'admin/base.html.twig' %}

{% block main %}

    <main>

        <div class="category-option-container">

            <h2>Edit Categories</h2>

            {% for message in app.flashes('new_category_added') %}

                <div class="flash-message-success">
                    {{ message }}
                </div>

            {% endfor %}

            <a href="{{path('add_new_category')}}" class="category-option add">
                <h3>Add</h3>
                <i class="fas fa-plus fa-2x add"></i>
            </a>

            <a class="category-option edit">
                <h3>Edit</h3>
                <i class="far fa-edit fa-2x edit"></i>
            </a>

            <a class="category-option delete">
                <h3>Delete</h3>
                <i class="fas fa-minus-circle fa-2x delete"></i>
            </a>

        </div>
    
    </main>

{% endblock %}