<!DOCTYPE html>
<html lang="en">
    
    <head>
    
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        
        {# Local css styles #}
        <link rel="stylesheet" href="{{asset('assets/css/styles.css')}}">

        {# Google Font #}
        <link href="{{asset('https://fonts.googleapis.com/css2?family=Open+Sans&family=Quicksand&display=swap')}}" rel="stylesheet">

        <!-- Font Awesome -->
        <link rel="stylesheet" href="{{asset('https://use.fontawesome.com/releases/v5.8.1/css/all.css')}}" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

        <title>{% block title %}AMT{% endblock %}</title>
        
        {% block stylesheets %}{% endblock %}
    
    </head>
    
    <body>

        {% block header %}
        
            <header>

                <h1>AMT</h1>
                <h3>post free item</h3>
                <i class="fas fa-bars fa-2x"></i>

            </header>
        
        {% endblock %}

        {% block search %}

            <div class="find-items-container">
                
                <div class="find-items-categories">

                    <a href="">Categories</a>
                        {{
                            render(controller("App\\Controller\\FrontController::categories"))
                        }}
                         

                </div>
                
                <div class="find-items-search">

                    <span><input type="text">
                    <i class="fas fa-search fa-2x"></i></span>

                </div>

            </div>

        {% endblock %}

        {% block main %}{% endblock %}
        
        {% block footer %}
            
            <footer>

                <i class="far fa-envelope fa-2x"></i>
                <i class="fab fa-facebook-f fa-2x"></i>
                <i class="fab fa-twitter fa-2x"></i>

            </footer>

        {% endblock %}
        
        {% block javascripts %}{% endblock %}

    </body>

</html>
